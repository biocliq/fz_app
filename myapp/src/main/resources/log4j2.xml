<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	
  <Appenders>
	<Console name="Console" target="SYSTEM_OUT">
	  <PatternLayout pattern="%d{hh:mm:ss.SSS} %tid %level{length=2} %c{1.} - %msg%n"/>
	</Console>
  </Appenders>
  <Loggers>
	<Logger name="com.zitlab.palmyra.webservice.security" level="DEBUG">
		<AppenderRef ref="Console"/>
	</Logger>
	
	<Logger name="com.zitlab" level="trace"/>
	<Logger name="com.zitlab.palmyra.webservice.security" level="FATAL"/>
	<Logger name="com.zitlab.palmyra.devicemgmt" level="info"/>
	<Logger name="com.zitlab.palmyra.cinch.tuple.queryhelper" level = "trace"/>
	<Logger name="com.zitlab.palmyra.cinch.tuple.dao.NativeQueryDao" level = "trace"/>
	<Logger name="com.zitlab.palmyra.api2db.tuple.dao" level = "debug"/>	
	<Logger name="com.zitlab.ddm.web.proxy" level="info"/>
	<Logger name="com.zitlab.palmyra.util" level="trace"/>
	<Logger name="org.eclipse.jetty" level="info"/>
	<Logger name="org.springframework" level="error"/>	
	
	<Root level="trace">	
	  <AppenderRef ref="Console"/>
	</Root>
	
	<Logger name="METRIC.REQUEST" level="debug">
		<AppenderRef ref="Console"/>
	</Logger>
	
  </Loggers>
</Configuration>